<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@color/primaryColor"
android:id="@+id/coordinator_layout_twoPane">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/AppBarLayout_height"
            android:gravity="center_vertical|center_horizontal"
            android:background="@color/primaryColor"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="@dimen/appbar_elevation">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collabsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/Overlap_top"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|enterAlways|snap">
                <ImageView
                    app:layout_collapseMode="parallax"
                    android:layout_width="match_parent"
                    android:scaleType = "centerCrop"
                    android:layout_height="@dimen/AppBarLayout_height"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:src="@drawable/stanly" />
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_marginLeft="@dimen/list_toolbar_side_margin"
                    android:layout_marginRight="@dimen/list_toolbar_side_margin"
                    android:layout_height="?actionBarSize"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    app:layout_collapseMode="pin"
                    app:layout_scrollFlags="scroll|enterAlways|snap"
                    app:popupTheme="@style/AppTheme.PopupOverlay"/>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/LinearMasterContainerTwoPane">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/master_list_fragment"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="#FFF"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/Audio_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:scaleType="centerInside"></FrameLayout>
            <FrameLayout
                android:id="@+id/Article_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:scaleType="centerInside"></FrameLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>